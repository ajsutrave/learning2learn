{
    "name": "Learning2Learn - Replit data logger",
    "version": "0.0.5",
    "manifest_version": 2,

    "description": "Logs data from repl.it for the learning2learn grant",

    "permissions": [ "storage" ],

    "content_scripts": [{
    	"matches": [
    		"http://repl.it/*",
    		"https://repl.it/*",
    		"http://127.0.0.1:8080/api*",
    		"https://127.0.0.1:8080/api*",
			"https://learning2learn-gcp-backend.appspot.com/api*",
			"http://learning2learn-gcp-backend.appspot.com/api*"
    	],

      "js": [
        // included third party libraries
        "includes/jquery-3.3.1.min.js",
        "includes/notify.js",

        // The initializer
        "init.js"
      ],
    	"run_at": "document_end"
    }],
    "web_accessible_resources": [
      "includes/jquery-3.3.1.min.js",
      "includes/notify.js",

      "main.js",

      "generator/*.js",
      "notifications/*.js",
      "page-listeners/*.js",
      "L2L.js"
    ],

    "browser_action": {
        "default_title": "Learning2Learn - Repl.it data logger"
    }
}
