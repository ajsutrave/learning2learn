{
  //manifest spec: http://developer.chrome.com/extensions/manifest.html
  //required
  "name": "Learning2Learn - Replit data logger",
  "version": "0.3",
  "manifest_version": 2,

  //recommended
  "description": "Logs data from repl.it for the learning2learn grant",

  "permissions": [ "storage" ],

  "content_scripts": [{
    "matches": [
      "http://repl.it/*",
      "https://repl.it/*"
    ],
    "js": [
      // included third party libraries
      "includes/jquery-3.3.1.min.js",
      "includes/notify.js",

      // Included internal libraries
      //"L2L.js",

      // The initializer
      "content.js"
    ],
    "web_accessible_resources": [

       "generator/index.js",
       "generator/UUID.js",

       "notifications/index.js",

       "page-listeners/index.js",

       "L2L.js"

    ],
    "run_at": "document_end"
  }],
  //required
  "browser_action": {
    "default_title": "Learning2Learn - Repl.it data logger"
  }
}
